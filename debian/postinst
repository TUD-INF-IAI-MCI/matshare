#!/bin/sh -e
# postinst script for matshare
#
# see: dh_installdeb(1)

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
	configure|reconfigure)
		adduser --quiet --system --home /opt/matshare/data --disabled-login matshare || true

		ln -fs /opt/matshare/uwsgi_configs/main.ini /etc/uwsgi/apps-enabled/matshare_main.ini
		ln -fs /opt/matshare/uwsgi_configs/git.ini /etc/uwsgi/apps-enabled/matshare_git.ini

		oldcwd="$PWD"
		cd /opt/matshare
		# Don't chown recursively, there might be custom permissions in place
		chown matshare data
		# Generate a secret key automatically
		if [ ! -e data/config/90-secret-key.conf ]; then
			key=`head /dev/urandom | tr -dc A-Za-z0-9 | head -c 80`
			echo "MS_SECRET_KEY=\${MS_SECRET_KEY:-'$key'}" > data/config/90-secret-key.conf
		fi
		# Check if a valid configuration exists already
		if ./scripts/compile_debian_config; then
			./scripts/init_or_upgrade
			# restart uwsgi server if running
			if [ -e /etc/init.d/uwsgi ]; then
				if /etc/init.d/uwsgi status > /dev/null 2>&1 ; then
					echo -n "Restarting MatShare uWSGI apps ... "
					/etc/init.d/uwsgi restart matshare_main matshare_git 3>/dev/null || true
					echo "done."
				fi
				fi
			else
				echo
				echo "After applying all required settings in /opt/matshare/data/config run:"
				echo "\tdpkg-reconfigure matshare"
				echo
				fi
				cd "$oldcwd"
				;;

			abort-upgrade|abort-remove|abort-deconfigure)
				;;

			*)
				echo "postinst called with unknown argument \`$1'" >&2
				exit 1
				;;
		esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
